/* pages/list/index.wxss */

.list-container {
  background: #fefefe;
  padding: 0 5%;
}

.locate {
  display: flex;
  position: relative;
}

.locate-icon {
  position: absolute;
  top: 4rpx;
  font-size: 34rpx;
}

.locate-name {
  padding-left: 40rpx;
  line-height: 46rpx;
  font-size: 28rpx;
  color: #333;
}

.search-bar .van-search {
  padding: 0;
  margin-top: 20rpx;
}

.category-list {
  position: fixed;
  top: 160rpx;
  left: 0;
  right: 0;
  bottom: 120rpx;
  background: #fff;
}

.list-left {
  position: fixed;
  top: 160rpx;
  left: 0;
  bottom: 128rpx;
  width: 130rpx;
  background: #f5f6fa;
  z-index: 2;
  text-align: center;
}

.left-menu {
  font-size: 26rpx;
  padding: 28rpx 0;
  min-width: 124rpx;
  color: #bdc0c6;
  background: #f5f6fa;
}

.active {
  background: #fff;
  color: #000;
  font-weight: 500;
}

.list-right {
  position: fixed;
  top: 160rpx;
  left: 130rpx;
  right: 0;
  bottom: 120rpx;
  background: #fff;
  z-index: 2;
}

.right-item {
}

.menu-title {
  background: #f5f5f5;
  color: #515253;
  font-size: 26rpx;
  padding-left: 20rpx;
}

.item-wrap {
  display: flex;
  padding: 20rpx 40rpx 20rpx 20rpx;
}

.item-img {
  width: 15%;
}

.item-img image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.item-info {
  width: 85%;
  margin-left: 18rpx;
}

.item-info .info-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.item-info .info-desc {
  color: #666;
  font-size: 24rpx;
  margin: 4rpx 0 14rpx;
}

.price-num {
  display: flex;
}

.info-price {
  width: 65%;
  font-size: 24rpx;
  color: #f97829;
}

.info-price text:first-child {
  font-size: 30rpx;
  margin: 0 10rpx 0 4rpx;
  font-weight: 500;
}

.info-price text:last-child {
  color: #c9cad1;
  text-decoration: line-through;
}

.num-btn {
  width: 35%;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}

.fake-btn {
  width: 24px;
  height: 24px;
  text-align: center;
  border-radius: 50%;
  background: #1ec45b;
  font-weight: 500;
  line-height: 42rpx;
  font-size: 34rpx;
  color: #fff;
}

.goods-num {
  font-size: 34rpx;
  color: #444;
  min-width: 50rpx;
  line-height: 48rpx;
  justify-content: right;
  text-align: center;
}

.cart-bar {
  position: fixed;
  bottom: 10rpx;
  left: 30rpx;
  right: 30rpx;
  height: 80rpx;
  background: #111;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  color: #bdc0c6;
  display: flex;
  z-index: 100;
}

.cart-num {
  z-index: 3;
  position: fixed;
  bottom: 100rpx;
  left: 120rpx;
  min-width: 25px;
  background: red;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}

.cart-icon {
  width: 80rpx;
  position: absolute;
  top: -30rpx;
}

.cart-icon image {
  width: 80rpx;
  height: 120rpx;
}

.total {
  color: #bdc0c6;
  padding-left: 100rpx;
  line-height: 74rpx;
  font-size: 26rpx;
  width: 70%;
}

.total text {
  font-size: 36rpx;
}

.pay {
  width: 30%;
  text-align: center;
  line-height: 74rpx;
  font-size: 30rpx;
  background: #1ec45b;
  border-radius: 16rpx;
  color: #fff;
}

.choose-item .item-wrap .item-img {
  width: 10%;
}

.choose-item .item-wrap .item-img image {
  width: 50rpx;
  height: 50rpx;
}

.choose-item .item-wrap .item-info {
  width: 65%;
  line-height: 50rpx;
}

.choose-item .item-wrap .item-info .info-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.choose-item .item-wrap .price-num {
  width: 25%;
}

.choose-item .item-wrap .price-num .num-btn {
  width: 100%;
}

.clear-cart {
  text-align: right;
  color: #333;
  font-size: 26rpx;
  text-decoration: underline;
}
